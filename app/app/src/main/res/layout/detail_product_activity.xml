<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350sdp" />

                <TextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/teal"
                    android:padding="@dimen/_10sdp"
                    android:text="-5%"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:ci_drawable="@drawable/bg_indicator"
                    app:ci_gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="Tên sản phẩm"
                android:textSize="@dimen/_18sdp" />

            <LinearLayout
                android:id="@+id/sold_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán: " />

                <TextView
                    android:id="@+id/sold_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="175,000đ"
                    android:textColor="@color/teal"
                    android:textSize="@dimen/_24ssp" />

                <TextView
                    android:id="@+id/txt_discard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="175,000đ"
                    android:textSize="@dimen/_16ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="5dp"
                android:background="@color/line_space" />

            <TextView
                android:id="@+id/header_title_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Chi tiết sản phẩm"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="5dp"
                android:background="@color/line_space" />


            <TextView
                android:id="@+id/detail_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp" />

            <TextView
                android:id="@+id/header_title_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingHorizontal="@dimen/_5sdp"
                android:text="@string/comment"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="5dp"
                android:background="@color/line_space" />
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Chưa có nhận xét nào"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingBottom="@dimen/_30sdp"
                android:gravity="center_horizontal"/>
            <ListView
                android:id="@+id/list_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_7sdp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_popup_attr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/teal_200"
        android:fontFamily="sans-serif"
        android:text="@string/add_cart"
        android:textSize="16dp" />
</RelativeLayout>