<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/customer_info"
        android:textColor="@color/dark"
        android:textSize="@dimen/_18ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:background="@color/line_space" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Người nhận"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:hint="Tên người nhận"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Số điện thoại"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:hint="064xxxxx32"
        android:inputType="phone"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Địa chỉ nhận hàng"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:hint="Số nhà, tên đường,.."
        android:inputType="textLongMessage"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Email (Nếu có)"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:hint="for-example@example.com"
        android:inputType="textLongMessage"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Phương thức thanh toán:"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <RadioButton
        android:id="@+id/method_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Thanh toán khi nhận hàng"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="VNPay (Hiện đang tạm khóa)"
        android:textColor="@color/dark"
        android:textSize="@dimen/_14ssp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_order_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal"
        android:elevation="5dp"
        android:gravity="center"
        android:text="ĐẶT HÀNG NGAY"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />
</LinearLayout>