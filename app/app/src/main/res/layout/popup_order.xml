<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_popup"
    android:elevation="@dimen/_40sdp"
    android:id="@+id/dialog_attr">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/txt_size"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Chọn size"/>
    <GridView
        android:id="@+id/option_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_size"
        app:layout_constraintTop_toTopOf="@id/txt_size"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:numColumns="4" />
        <View
            android:id="@+id/line_space"
            android:layout_width="match_parent"
            android:layout_height="1sp"

            android:layout_below="@id/option_size"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@color/line_space"/>
    <TextView
        android:id="@+id/txt_color"
        android:layout_below="@id/line_space"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn màu"/>
    <GridView
        android:layout_below="@id/txt_color"
        android:id="@+id/option_color"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:numColumns="3"/>
        <View
            android:id="@+id/line_space_1"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@id/option_color"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="#57A9A9A9"/>
        <RelativeLayout
            android:layout_below="@id/line_space_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:id="@+id/option_amount">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_down"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="-"/>
            <EditText
                android:id="@+id/amount_order"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="1"
                android:enabled="false"
                android:inputType="numberSigned"/>
            <Button
                android:id="@+id/btn_up"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="+"/>
            </LinearLayout>
            <Button
                android:id="@+id/add_cart"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_button"
                android:layout_height="@dimen/_50sdp"
                android:text="Thêm vào giỏ"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:paddingHorizontal="@dimen/_15sdp"
                android:drawableRight="@drawable/ic_shopping_cart"
                android:drawableTint="@color/white"
                android:layout_alignParentBottom="true"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
